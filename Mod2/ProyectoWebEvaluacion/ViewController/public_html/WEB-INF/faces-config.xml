<?xml version="1.0" encoding="windows-1252"?>
<faces-config version="2.1" xmlns="http://java.sun.com/xml/ns/javaee">
    <application>
        <resource-bundle>
            <base-name>i18n.mensajes</base-name>
            <var>msg</var>
        </resource-bundle>
        <locale-config>
            <default-locale>es</default-locale>
        </locale-config>
    </application>
    <application>
        <resource-bundle>
            <base-name>i18n.errores</base-name>
            <var>err</var>
        </resource-bundle>
        <locale-config>
            <default-locale>es</default-locale>
        </locale-config>
    </application>
    <navigation-rule>
        <from-view-id>/index.jsf</from-view-id>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <to-view-id>/tasks.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/index.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/register.jsf</from-view-id>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <to-view-id>/index.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/register.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/tasks.jsf</from-view-id>
        <navigation-case>
            <from-outcome>EXIT</from-outcome>
            <to-view-id>/index.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule/>
    <navigation-rule/>
    <navigation-rule/>
</faces-config>